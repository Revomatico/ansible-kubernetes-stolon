## curl -sSL https://raw.githubusercontent.com/sorintlab/stolon/master/examples/kubernetes/stolon-sentinel.yaml > stolon-sentinel.yaml

apiVersion: apps/v1
kind: Deployment
metadata:
  name: {% if stolon_release | default('') %}{{ stolon_release }}-{% endif %}stolon-sentinel
spec:
  replicas: {{ stolon_sentinel_replicas }}
  selector:
    matchLabels:
      component: stolon-sentinel
      stolon-cluster: {% if stolon_release | default('') %}{{ stolon_release }}-{% endif %}{{ stolon_cluster }}
  template:
    metadata:
      labels:
        component: stolon-sentinel
        stolon-cluster: {% if stolon_release | default('') %}{{ stolon_release }}-{% endif %}{{ stolon_cluster }}
      annotations:
        prometheus.io/scrape: "true"
        prometheus.io/port: "8080"
    spec:
      containers:
        - name: stolon-sentinel
          image: {{ stolon_image }}
          command:
            - "/bin/bash"
            - "-ec"
            - |
              exec gosu stolon stolon-sentinel
          env:
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: STSENTINEL_CLUSTER_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.labels['stolon-cluster']
            - name: STSENTINEL_STORE_BACKEND
              value: "kubernetes"
            - name: STSENTINEL_KUBE_RESOURCE_KIND
              value: "configmap"
            - name: STSENTINEL_METRICS_LISTEN_ADDRESS
              value: "0.0.0.0:8080"
            - name: STSENTINEL_DEBUG
              value: "{{ stolon_stsentinel_debug }}"
          ports:
            - containerPort: 8080
